<% form_class ||= ''%>
<%= form_tag(list_path,method:'get',class:"photo-search #{form_class}") do%>      
  <%= hidden_field_tag :do_search, false%>
  <%= text_field_tag :query,@query,class:'query',placeholder:'type here to search' %>
  <button class="btn btn-default btn-lg" type="submit">
    <i class="fa fa-search"></i>
  </button>
<%end%>